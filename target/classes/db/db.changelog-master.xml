<databaseChangeLog
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog-ext
   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd
   http://www.liquibase.org/xml/ns/dbchangelog
   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

  <changeSet author="adidas" id="base-db">
    <createTable catalogName="shoe"
      tableName="models">
      <column name="model_id" type="integer">
        <constraints nullable="false"/>
      </column>
      <column name="created_date" type="long">
        <constraints nullable="false"/>
      </column>
      <column name="last_updated_date" type="long">
        <constraints nullable="false"/>
      </column>
    </createTable>
    <createTable catalogName="shoe"
      tableName="models_aud">
      <column name="model_id" type="integer">
        <constraints nullable="false"/>
      </column>
      <column name="created_date" type="long">
        <constraints nullable="false"/>
      </column>
      <column name="last_updated_date" type="long">
        <constraints nullable="false"/>
      </column>
      <column name="rev" type="integer">
        <constraints nullable="false"/>
      </column>
      <column name="revtype" type="integer">
        <constraints nullable="false"/>
      </column>
    </createTable>
    <createTable catalogName="shoe"
      tableName="shoes">
      <column name="shoe_id" type="integer">
        <constraints nullable="false"/>
      </column>
      <column name="model_id" type="integer">
        <constraints nullable="false"/>
      </column>
      <column name="shoe_color" type="varchar(255)">
        <constraints nullable="false"/>
      </column>
      <column name="shoe_size" type="integer">
        <constraints nullable="false"/>
      </column>
      <column name="rev" type="integer">
        <constraints nullable="false"/>
      </column>
      <column name="revtype" type="integer">
        <constraints nullable="false"/>
      </column>
    </createTable>
    <createTable catalogName="shoe"
      tableName="shoes_aud">
      <column name="shoe_id" type="integer">
        <constraints nullable="false"/>
      </column>
      <column name="model_id" type="integer">
        <constraints nullable="false"/>
      </column>
      <column name="shoe_color" type="varchar(255)">
        <constraints nullable="false"/>
      </column>
      <column name="shoe_size" type="integer">
        <constraints nullable="false"/>
      </column>
      <column name="rev" type="integer">
        <constraints nullable="false"/>
      </column>
      <column name="revtype" type="integer">
        <constraints nullable="false"/>
      </column>
    </createTable>
    <createTable catalogName="shoe"
      tableName="revinfo">
      <column name="rev" type="integer">
        <constraints nullable="false"/>
      </column>
      <column name="revtstmp" type="long">
        <constraints nullable="false"/>
      </column>
    </createTable>
    <addAutoIncrement catalogName="shoe"
      columnDataType="integer"
      columnName="rev"
      incrementBy="1"
      startWith="1"
      tableName="revinfo"/>

  </changeSet>
</databaseChangeLog>